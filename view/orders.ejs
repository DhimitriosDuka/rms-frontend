<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>All Orders</title>
		<link href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" rel="stylesheet">
		<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
	</head>
	<body>
		<%- include('./partial/navbar.ejs') %>
		<div class="container-fluid p-5">
			<h4>All orders</h4>
			<table id="example" class="display" style="width:100%">
				<thead>
				<tr>
					<th>Order number</th>
					<th>Created</th>
					<th>Delivery Time</th>
					<th>Phone number</th>
					<th>Address</th>
					<th>Price</th>
					<th>Delivery</th>
					<th>Status</th>
					<th>Full Order</th>

				</tr>
				</thead>
				<tbody>
					<% orders.forEach( order => { %>
					<tr>
						<td>#<%= order.id %></td>
						<td><%= new Date(order.createdAt).toDateString() %></td>
						<td><%= (order.deliveryTime).split("T")[0] %> <%=order.deliveryTime.split("T")[1].split(".")[0]%></td>
						<td><%= order.phoneNumber %></td>
						<td><%= order.address%></td>
						<td><%= order.price %></td>
						<td><%= order.deliveryGuy.firstName %> <%= order.deliveryGuy.lastName %></td>
						<td><%= order.status %></td>
						<td><a href="/order/<%= order.id %>/full" class="d-flex justify-content-center"><svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#000000"><path d="M0 0h24v24H0z" fill="none"/><path d="M3 8.41l9 9 7-7V15h2V7h-8v2h4.59L12 14.59 4.41 7 3 8.41z"/></svg></a></td>
					</tr>
					<% }) %>
				</tbody>
			</table>


		</div>






	</body>
	<script
			type="text/javascript"
			charset="utf8"
			src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.js"
	></script>
	<script>
		$(document).ready(function() {
			$('#example').DataTable();
		} );
	</script>
</html>